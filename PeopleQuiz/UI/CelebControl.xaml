<UserControl x:Class="Shenoy.Quiz.UI.CelebControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="100" Width="100" FontFamily="Segoe UI" MouseDown="HandleClick">
    <Grid Margin="0,0,0,0" Height="100" Width="100">
        <Rectangle Height="90" HorizontalAlignment="Left" Margin="2,3,0,0"
                   Stroke="Black" VerticalAlignment="Top" Width="90" RadiusX="50" RadiusY="50" StrokeThickness="2">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="#FF93B2F7" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Height="86" HorizontalAlignment="Center" Margin="10,5,9.667,0"
               Name="imgPerson" Stretch="Fill" VerticalAlignment="Top" Width="75" Source="/PeopleQuiz;component/Resources/pallavi.jpg"/>
    </Grid>
</UserControl>
